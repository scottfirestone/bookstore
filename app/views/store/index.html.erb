<h1>Firestone's Books</h1>
<%= link_to "Add a new book", new_book_path %>

<% if @books.empty? %>
  <p>Add some books to the store!</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Stock Number</th>
        <th>Book Title</th>
        <th>Author</th>
        <th>Location</th>
        <th>Remove from Store</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.id %></td>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.location.location_type %></td>
          <td><%= link_to "Remove", book_path(book), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
